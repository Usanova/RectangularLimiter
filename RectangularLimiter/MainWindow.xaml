<Window x:Class="RectangularLimiter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RectangularLimiter"
        mc:Ignorable="d"
        Title="RectangularLimiter" Height="450" Width="800" KeyDown="cnvMain_KeyDown" ResizeMode="NoResize">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Background="#FFA5FBBE" TextAlignment="Center" FontWeight="Bold" FontSize="15" Text="Для отмены действия нажмите &#x2190;"></TextBlock>
        <Canvas  x:Name="cnvMain" MouseMove="Canvas_MouseMove" Background="Aquamarine" MouseLeftButtonDown="cnvMain_MouseLeftButtonDown">

        </Canvas>
    </DockPanel>
</Window>
